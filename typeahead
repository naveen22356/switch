$('#the-basics .typeahead').typeahead({
  hint: true,
  highlight: true,
  minLength: 1
},
{
  name: 'cities',
  display: 'value',
  source: substringMatcher(cities),
  templates: {
    suggestion: function(data) {
    return '<p><strong>' + data.value + '</strong> â€“ ' + data.country + '</p>';
}
  }
});